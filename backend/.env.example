# Development Environment Configuration
# Copy to .env for local development

# Database
DATABASE_URL="postgresql://mindmap:mindmap_dev@localhost:5432/mindmap?schema=public"

# Redis (no password for local development)
REDIS_URL="redis://localhost:6379"

# JWT Secrets (development only - use strong secrets in production!)
JWT_SECRET="dev-jwt-secret-change-in-production"
JWT_REFRESH_SECRET="dev-refresh-secret-change-in-production"

# reCAPTCHA (optional - leave empty to disable)
RECAPTCHA_SECRET_KEY=

# SMTP (optional - leave empty for development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@mindmap.app

# Frontend URL
FRONTEND_URL=http://localhost:3000
